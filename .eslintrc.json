{
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"mw": false,
		"module": false,
		"OO": false,
		"require": false,
		"util": false,
		"wikibase": false,
		"Vue": false,
		"Vuex": false,
		"global": false
	},
	"plugins": [
		"promise",
		"compat"
	],
	"rules": {
		"compat/compat": "error",
		"indent": [ "error", "tab", { "CallExpression": { "arguments": "first" } } ],
		"no-underscore-dangle": "off",
		"no-use-before-define": [ "error", "nofunc" ],
		"max-len": "off",
		"one-var": "off",
		"operator-linebreak": "off",
		"promise/no-native": "error",
		"valid-jsdoc": "off",
		"vars-on-top": "off",
		"wrap-iife": "off",

		"jquery/no-proxy":  "off",
		"jquery/no-each-util":  "off",
		"jquery/no-in-array":  "off",
		"max-statements-per-line":  "off",
		"no-restricted-properties": "off",
		"no-restricted-syntax": "off"
	}
}
